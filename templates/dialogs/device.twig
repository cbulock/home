<div class="modal fade" id="deviceDialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add Device</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal">
					<input type='hidden' value='' id='deviceId'>
					<div class="form-group">
						<label for="deviceEdit" class="col-sm-2 control-label">Device</label>
						<div class="col-sm-10">
							<input class="form-control" id="deviceEdit" placeholder="Device Name">
						</div>
					</div>
					<div class="form-group">
						<label for="hostnameEdit" class="col-sm-2 control-label">Hostname</label>
						<div class="col-sm-10">
							<input class="form-control" id="hostnameEdit" placeholder="Hostname">
						</div>
					</div>
					<div class="form-group">
						<label for="ipEdit" class="col-sm-2 control-label">IP</label>
						<div class="col-sm-10">
							<input class="form-control" id="ipEdit" placeholder="IP Address">
						</div>
					</div>
					<div class="form-group">
						<label for="macEdit" class="col-sm-2 control-label">MAC</label>
						<div class="col-sm-10">
							<input class="form-control" id="macEdit" placeholder="MAC Address">
						</div>
					</div>
					<div class="form-group">
						<label for="typeEdit" class="col-sm-2 control-label">Device Type</label>
						<div class="col-sm-10">
							<select class="form-control" id='typeEdit'>
								{% for type in device_types %}
									<option value='{{ type.id }}'>{{ type.type }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label for="userEdit" class="col-sm-2 control-label">Primary User</label>
						<div class="col-sm-10">
							<select class="form-control" id='userEdit'>
								<option> </option>
								{% for user in users %}
									<option value='{{ user.id }}'>{{ user.name }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>